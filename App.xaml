<Application x:Class="BoltDownloader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Base styles -->
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                <!-- Menu templates (control colors independently of SystemColors) -->
                <ResourceDictionary Source="Resources/Templates.Menu.xaml"/>
                <!-- Base palette (overridden by theme dictionaries at runtime) -->
                <ResourceDictionary Source="Resources/Theme.base.xaml"/>
                <!-- Default theme (will be swapped at runtime by App.ApplyTheme) -->
                <ResourceDictionary Source="Resources/Theme.light.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
