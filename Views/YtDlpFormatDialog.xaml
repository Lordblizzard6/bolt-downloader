<Window x:Class="BoltDownloader.Views.YtDlpFormatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoltDownloader.Views"
        mc:Ignorable="d"
        Title="Select Format" Height="520" Width="820" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtInfo" TextWrapping="Wrap" Margin="0,0,0,8"/>

        <ListView x:Name="lvFormats" Grid.Row="1" ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="90" DisplayMemberBinding="{Binding FormatId}"/>
                    <GridViewColumn Header="Ext" Width="60" DisplayMemberBinding="{Binding Ext}"/>
                    <GridViewColumn Header="Resolution" Width="110" DisplayMemberBinding="{Binding Resolution}"/>
                    <GridViewColumn Header="VCodec" Width="110" DisplayMemberBinding="{Binding Vcodec}"/>
                    <GridViewColumn Header="ACodec" Width="110" DisplayMemberBinding="{Binding Acodec}"/>
                    <GridViewColumn Header="Size" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}">
                                            <Binding Path="Filesize"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Note" Width="200" DisplayMemberBinding="{Binding Note}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="100" Height="28" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click">OK</Button>
            <Button Width="100" Height="28" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
