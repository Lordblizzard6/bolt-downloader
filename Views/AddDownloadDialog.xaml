<Window x:Class="BoltDownloader.Views.AddDownloadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A침adir Nueva Descarga" 
        Height="380" Width="600" MinHeight="360"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource SurfaceColor}"
        Foreground="{DynamicResource TextPrimaryBrush}">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- URL -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="URL de descarga:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtUrl" Height="25" Grid.Column="0"
                         TextChanged="txtUrl_TextChanged"
                         ToolTip="Ingrese la URL del archivo a descargar"/>
                <Button Grid.Column="1" Content="游늶" Width="36" Height="25"
                        Margin="6,0,0,0" ToolTip="Pegar URL desde el portapapeles"
                        Click="PasteFromClipboard_Click"/>
            </Grid>
        </StackPanel>

        <!-- Nombre del archivo -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Nombre del archivo:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFileName" Height="25"
                     ToolTip="Nombre con el que se guardar치 el archivo"/>
        </StackPanel>

        <!-- Carpeta de destino -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Guardar en:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtSavePath" Height="25" Grid.Column="0" 
                         IsReadOnly="True" Background="{DynamicResource SurfaceAltColor}"/>
                <Button Grid.Column="1" Content="Examinar..." Width="80" 
                        Margin="5,0,0,0" Click="BrowseFolder_Click"/>
            </Grid>
        </StackPanel>

        <!-- Opciones adicionales -->
        <GroupBox Grid.Row="3" Header="Opciones" Padding="10" Margin="0,0,0,15">
            <StackPanel>
                <CheckBox x:Name="chkStartImmediately" 
                          Content="Iniciar descarga inmediatamente" 
                          IsChecked="True" Margin="0,0,0,5"/>
                <CheckBox x:Name="chkUseCustomHeaders" 
                          Content="Usar headers personalizados" 
                          Margin="0,0,0,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Informaci칩n -->
        <TextBlock Grid.Row="4" x:Name="txtInfo" 
                   Text="" 
                   Foreground="Blue" 
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <!-- Cabeceras HTTP opcionales (colapsable) -->
        <Expander Grid.Row="5" Header="Cabeceras HTTP (opcional)" IsExpanded="False" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Referer:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtReferrer" Grid.Column="1" Height="25"/>
                </Grid>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cookies:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCookies" Grid.Column="1" Height="25" ToolTip="Formato: name=value; otra=value2"/>
                </Grid>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="User-Agent (override):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtUserAgent" Grid.Column="1" Height="25"/>
                </Grid>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Headers extra:" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtCustomHeaders" Grid.Column="1" Height="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                             ToolTip="Uno por l칤nea: Nombre: Valor"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="L칤mite de velocidad (KB/s):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPerLimit" Grid.Column="1" Height="25"/>
                    <TextBlock Grid.Column="2" Text="(0 = sin l칤mite)" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                </Grid>

                <!-- Autenticaci칩n B치sica -->
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Usuario (Basic Auth):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtAuthUser" Grid.Column="1" Height="25"/>
                </Grid>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Contrase침a:" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="txtAuthPass" Grid.Column="1" Height="25"/>
                </Grid>

                <!-- Segmentos por descarga -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Segmentos (override):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSegmentsOverride" Grid.Column="1" Height="25" ToolTip="0 = usar global"/>
                    <TextBlock Grid.Column="2" Text="(0 = global)" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                </Grid>
            </StackPanel>
        </Expander>

        <!-- Botones -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="btnOk" Content="A침adir" Width="100" Height="30" 
                    Margin="0,0,10,0" Click="Ok_Click" IsDefault="True"/>
            <Button Content="Cancelar" Width="100" Height="30" 
                    Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
