<Window x:Class="BoltDownloader.Views.SchedulerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programador de Tareas" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SurfaceColor}"
        Foreground="{DynamicResource TextPrimaryBrush}">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Lista de tareas programadas -->
        <GroupBox Grid.Row="0" Header="Tareas Programadas" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="dgTasks" 
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          Background="{DynamicResource SurfaceColor}"
                          AlternatingRowBackground="{DynamicResource SurfaceAltColor}"
                          Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Habilitado" Binding="{Binding IsEnabled}" Width="80"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Type}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Horario" Binding="{Binding ScheduledTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Acción" Binding="{Binding Action}" Width="*" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Nueva Tarea" Width="100" Height="30" 
                            Margin="0,0,10,0" Click="NewTask_Click"/>
                    <Button Content="Eliminar" Width="100" Height="30" 
                            Click="DeleteTask_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Panel de nueva tarea -->
        <GroupBox Grid.Row="1" Header="Nueva Tarea Programada" Padding="10" Margin="0,10,0,0"
                  x:Name="panelNewTask" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" 
                           VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtTaskName" 
                         Height="25" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tipo:" 
                           VerticalAlignment="Center" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbTaskType" 
                          Height="25" Margin="0,0,0,10" SelectionChanged="cmbTaskType_SelectionChanged">
                    <ComboBoxItem Content="Una vez" Tag="Once"/>
                    <ComboBoxItem Content="Diariamente" Tag="Daily"/>
                    <ComboBoxItem Content="Semanalmente" Tag="Weekly"/>
                    <ComboBoxItem Content="Al iniciar" Tag="OnStartup"/>
                </ComboBox>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Fecha y Hora:" 
                           VerticalAlignment="Center" Margin="0,0,10,10"
                           x:Name="lblDateTime"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" 
                            Margin="0,0,0,10" x:Name="panelDateTime">
                    <DatePicker x:Name="dpTaskDate" Width="150" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtTaskTime" Width="80" Height="25" 
                             Text="00:00" ToolTip="Formato: HH:mm"/>
                </StackPanel>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Acción:" 
                           VerticalAlignment="Center" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cmbTaskAction" 
                          Height="25" Margin="0,0,0,10">
                    <ComboBoxItem Content="Iniciar descargas" Tag="StartDownloads"/>
                    <ComboBoxItem Content="Pausar descargas" Tag="PauseDownloads"/>
                    <ComboBoxItem Content="Apagar sistema" Tag="Shutdown"/>
                    <ComboBoxItem Content="Aplicar límite de velocidad" Tag="SpeedLimit"/>
                </ComboBox>

                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Guardar Tarea" Width="110" Height="30" 
                            Margin="0,0,10,0" Click="SaveTask_Click"/>
                    <Button Content="Cancelar" Width="90" Height="30" 
                            Click="CancelNewTask_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Botón cerrar -->
        <Button Grid.Row="2" Content="Cerrar" Width="90" Height="30" 
                HorizontalAlignment="Right" Margin="0,10,0,0"
                Click="Close_Click"/>
    </Grid>
</Window>
