<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Light Theme Palette -->
  <SolidColorBrush x:Key="PrimaryColor" Color="#0078D7"/>
  <SolidColorBrush x:Key="SecondaryColor" Color="#005A9E"/>
  <SolidColorBrush x:Key="BackgroundColor" Color="#F5F7FA"/>
  <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="SurfaceAltColor" Color="#F3F6F9"/>
  <SolidColorBrush x:Key="BorderColor" Color="#D0D7DE"/>
  <SolidColorBrush x:Key="HoverColor" Color="#E7F2FF"/>

  <!-- Text -->
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1A1A1A"/>
  <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5A5A5A"/>

  <!-- Menu brushes -->
  <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="MenuBorderBrush" Color="#D0D7DE"/>
  <SolidColorBrush x:Key="MenuItemHoverBrush" Color="#E7F2FF"/>
  <SolidColorBrush x:Key="MenuItemForegroundBrush" Color="#1A1A1A"/>
  <SolidColorBrush x:Key="MenuItemDisabledForegroundBrush" Color="#9AA0A6"/>

  <!-- Row state brushes -->
  <SolidColorBrush x:Key="RowDownloadingBrush" Color="#E0F5FF"/>
  <SolidColorBrush x:Key="RowPausedBrush" Color="#FFF8E0"/>
  <SolidColorBrush x:Key="RowErrorBrush" Color="#FFEBEE"/>
  <SolidColorBrush x:Key="RowCompletedBrush" Color="#E8F5E9"/>
  
  <!-- Selection brushes -->
  <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#D6ECFF"/>
  <SolidColorBrush x:Key="SelectedForegroundBrush" Color="#1A1A1A"/>

  <!-- System colors overrides for popup/menus (safe keys) -->
  <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="#1A1A1A"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#D6ECFF"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#1A1A1A"/>
  <!-- Additional system colors to affect ComboBox/Tab/Popup defaults on light theme -->
  <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#1A1A1A"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#1A1A1A"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#E7F2FF"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="#1A1A1A"/>
</ResourceDictionary>
